@{
    ViewData["Title"] = "About CourtDiary";
}

<div class="container mt-5">
    <!-- About Section -->
    <section class="text-center">
        <h1 class="fw-bold text-primary">About CourtDiary</h1>
        <p class="lead text-muted">
            CourtDiary is an ASP.NET Core MVC web application designed to streamline legal case management and demonstrate proficiency in modern web technologies.
        </p>
    </section>

    <section class="mt-5 text-center">
        <div class="p-4 border rounded shadow-sm bg-light">
            <h2 class="fw-bold text-primary">
                💡 Technical Expertise
            </h2>
            <p class="text-muted fs-5">
                Building a scalable and efficient legal management system using modern technologies.
            </p>

            <div class="row g-4 mt-4">
                <div class="col-md-4">
                    <div class="p-3 border rounded bg-white text-center">
                        <i class="fas fa-cogs fa-3x text-primary"></i>
                        <h4 class="mt-3">.NET Core</h4>
                        <p>Cross-platform framework for developing robust web applications.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="p-3 border rounded bg-white text-center">
                        <i class="fas fa-database fa-3x text-success"></i>
                        <h4 class="mt-3">Entity Framework Core</h4>
                        <p>Efficient data handling with ORM for seamless database interaction.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="p-3 border rounded bg-white text-center">
                        <i class="fas fa-cloud fa-3x text-danger"></i>
                        <h4 class="mt-3">Azure Services</h4>
                        <p>Cloud-based deployment, hosting, and automated DevOps solutions.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Technology Stack Section -->
    <section class="mt-5">
        <h2 class="text-center text-secondary">🔹 Technology Stack</h2>
        <p class="text-muted text-center fs-5">Built using cutting-edge technologies to demonstrate full-stack development expertise.</p>
        <div class="row g-4 text-center">
            <div class="col-md-3 col-sm-6">
                <div class="p-3 border rounded shadow-sm">
                    <i class="fas fa-desktop fa-3x text-primary"></i>
                    <h5 class="mt-3">Frontend</h5>
                    <ul class="text-muted text-start">
                        <li>ASP.NET Core MVC Views</li>
                        <li>HTML, CSS & Bootstrap</li>
                        <li>JavaScript & jQuery</li>
                        <li>Toastr for real-time notifications</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="p-3 border rounded shadow-sm">
                    <i class="fas fa-server fa-3x text-success"></i>
                    <h5 class="mt-3">Backend</h5>
                    <ul class="text-muted text-start">
                        <li>.NET Core MVC Framework</li>
                        <li>ASP.NET Core Controllers & Razor Views</li>
                        <li>Entity Framework Core</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="p-3 border rounded shadow-sm">
                    <i class="fas fa-database fa-3x text-warning"></i>
                    <h5 class="mt-3">Database</h5>
                    <ul class="text-muted text-start">
                        <li>Microsoft SQL Server (On-Premise Relational DBMS)</li>
                        <li>Azure SQL Database (Cloud-Based Fully Managed SQL Service)</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="p-3 border rounded shadow-sm">
                    <i class="fas fa-cloud-upload-alt fa-3x text-danger"></i>
                    <h5 class="mt-3">Cloud & DevOps</h5>
                    <ul class="text-muted text-start">
                        <li>Azure App Service</li>
                        <li>Azure DevOps (Repos & Pipelines)</li>
                        <li>CI/CD for automated deployments</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Skills Showcase Section -->
    <section class="mt-5 text-center">
        <h3 class="fw-bold text-primary">🌟 Skills Demonstrated</h3>
        <p class="text-muted fs-5">
            This app highlights my **expertise in cloud technologies, full-stack development, and scalable architecture.**
        </p>
    </section>
</div>